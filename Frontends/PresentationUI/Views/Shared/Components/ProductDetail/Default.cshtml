@model ProductDetailViewModel

<div class="product_details">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product-details-tab">
                    <div id="img-1" class="zoomWrapper single-zoom">
                        <a href="#">
                            <img id="zoom1" src="@Model.GetProductDetailDto.Product.ProductImage" data-zoom-image="@Model.GetProductDetailDto.Product.ProductImage" alt="big-1">
                        </a>
                    </div>
                    <div class="single-zoom-thumb">
                        <ul class="s-tab-zoom owl-carousel single-product-active" id="gallery_01">
                            <li>
                                <a href="#" class="elevatezoom-gallery active" data-update="" data-image="@Model.GetProductDetailDto.Product.ProductImage" data-zoom-image="@Model.GetProductDetailDto.Product.ProductImage">
                                    <img src="@Model.GetProductDetailDto.Product.ProductImage" alt="zo-th-1" />
                                </a>
                            </li>
                            <li>
                                <a href="#" class="elevatezoom-gallery" data-update="" data-image="@Model.GetProductImageDto.Image1" data-zoom-image="@Model.GetProductImageDto.Image1">
                                    <img src="@Model.GetProductImageDto.Image1" alt="zo-th-1" />
                                </a>
                            </li>
                            <li>
                                <a href="#" class="elevatezoom-gallery" data-update="" data-image="@Model.GetProductImageDto.Image2" data-zoom-image="@Model.GetProductImageDto.Image2">
                                    <img src="@Model.GetProductImageDto.Image2" alt="zo-th-1" />
                                </a>
                            </li>
                            <li>
                                <a href="#" class="elevatezoom-gallery" data-update="" data-image="@Model.GetProductImageDto.Image3" data-zoom-image="@Model.GetProductImageDto.Image3">
                                    <img src="@Model.GetProductImageDto.Image3" alt="zo-th-1" />
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product_d_right">
                    <h1>@Model.GetProductDetailDto.Product.ProductName</h1>
                    <div class="product_nav">
                    </div>
                    <div class=" product_ratting">
                        <ul>
                            <li><a href="#"><i class="fa fa-star"></i></a></li>
                            <li><a href="#"><i class="fa fa-star"></i></a></li>
                            <li><a href="#"><i class="fa fa-star"></i></a></li>
                            <li><a href="#"><i class="fa fa-star"></i></a></li>
                            <li><a href="#"><i class="fa fa-star"></i></a></li>
                        </ul>
                    </div>
                    <div class="product_price">
                        <span class="current_price">₺@Model.GetProductDetailDto.Product.ProductPrice</span>
                    </div>
                    <div class="product_desc">
                        <p>@Model.GetProductDetailDto.Product.ProductDescription</p>
                    </div>
                    <div class="product_variant quantity">
                        <label>Miktar</label>
                        <input min="1" max="100" value="1" type="number">
                        <button class="button" type="button">Sepete Ekle</button>
                    </div>
                    <div class=" product_d_action">
                        <ul>
                            <li><a href="#" title="İstek Listesine Ekle">+ İstek Listesine Ekle</a></li>
                        </ul>
                    </div>
                    <div class="product_meta">
                    </div>
                    <div class="priduct_social">
                        <ul>
                            <li><a href="#" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#" title="Pinterest"><i class="fa fa-pinterest"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>