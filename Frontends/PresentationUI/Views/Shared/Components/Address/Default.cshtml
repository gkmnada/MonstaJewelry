<div class="col-lg-6 col-md-6">
    <h3>Adres Detayları</h3>
    <div class="row">
        <div class="col-12 mb-20">
            <label for="select-address">Adres Seç</label>
            <select class="niceselect_option" id="select-address">
                <option>Kişisel Adres</option>
                <option>İş Adresi</option>
                <option>Adres Ekle</option>
            </select>
        </div>
        <div class="col-12 mb-20"></div>
        <div class="col-lg-6 mb-20">
            <label for="txt-name">Adınız</label>
            <input type="text" id="txt-name" placeholder="Adınız">
        </div>
        <div class="col-lg-6 mb-20">
            <label for="txt-surname">Soyadınız</label>
            <input type="text" id="txt-surname" placeholder="Soyadınız">
        </div>
        <div class="col-12 mb-20">
            <label for="txt-address-title">Adres Başlığı</label>
            <input type="text" id="txt-address-title" placeholder="Adres Başlığı">
        </div>
        <div class="col-12 mb-20">
            <label>Adres Detayı</label>
            <input type="text" id="txt-detail-1" placeholder="Mahalle, Sokak, Semt">
        </div>
        <div class="col-12 mb-20">
            <input type="text" id="txt-detail-2" placeholder="Apartman, Kapı Numarası">
        </div>
        <div class="col-lg-6 mb-20">
            <label for="txt-city">Şehir</label>
            <input type="text" id="txt-city" placeholder="Şehir">
        </div>
        <div class="col-lg-6 mb-20">
            <label for="txt-district">İlçe</label>
            <input type="text" id="txt-district" placeholder="İlçe">
        </div>
        <div class="col-12 mb-20">
            <label for="txt-country">Ülke</label>
            <input type="text" id="txt-country" placeholder="Ülke">
        </div>
        <div class="col-lg-6 mb-20">
            <label for="txt-phone">Telefon Numarası</label>
            <input type="text" id="txt-phone" placeholder="Telefon Numaranız">
        </div>
        <div class="col-lg-6 mb-20">
            <label for="txt-mail">Mail Adresi</label>
            <input type="text" id="txt-mail" placeholder="Mail Adresiniz">
        </div>
        <div class="col-12">
            <div class="order-notes">
                <label for="txt-order-note">Sipariş Notu</label>
                <textarea id="txt-order-note" placeholder="Sipariş Notunuz..."></textarea>
            </div>
        </div>
    </div>
</div>