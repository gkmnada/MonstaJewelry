@model CreateMessageDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <h3>İletişim</h3>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li>></li>
                        <li>İletişim</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="contact_map">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="map-area">
                    <div id="googleMap"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="contact_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="contact_message content">
                    <h3>Bizimle İletişime Geçin</h3>
                    <p>Ürünlerimiz hakkında sorularınız ve siparişleriniz için iletişim formunu doldurabilirsiniz. Şıklığınıza şıklık katmak için buradayız.</p>
                    <ul>
                        <li><i class="fa fa-fax"></i>  Adres: 1064, Ankara, Türkiye</li>
                        <li><i class="fa fa-phone"></i> <a href="tel:05005000000">+90 500 500 00 00</a></li>
                        <li><i class="fa fa-envelope-o"></i> gokmen.ada@dirimtip.com.tr</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="contact_message form">
                    <form method="post">
                        <p>
                            <label> Adınız-Soyadınız</label>
                            <input type="text" asp-for="name" placeholder="Adınızı ve Soyadınızı Giriniz">
                        </p>
                        <p>
                            <label> Mail Adresiniz</label>
                            <input type="text" asp-for="email" placeholder="Mail Adresinizi Giriniz">
                        </p>
                        <p>
                            <label> Konu</label>
                            <input type="text" asp-for="subject" placeholder="Konu Giriniz">
                        </p>
                        <div class="contact_textarea">
                            <label> Mesajınız</label>
                            <textarea class="form-control2" asp-for="message" placeholder="Mesajınızı Yazınız"></textarea>
                        </div>
                        <button type="submit">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap"></script>
<script src="https://www.google.com/jsapi"></script>

<script src="/assets/js/map.js"></script>

