@model BannerViewModel

@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
        <h1 class="page-title fw-semibold fs-18 mb-0">Banner Güncelle</h1>
        <div class="ms-md-1 ms-0">
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Monsta Vitrin</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Banner</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div class="card custom-card">
                <div class="card-header justify-content-between">
                    <div class="card-title">
                        Banner Güncelle
                    </div>
                    <div class="d-flex">
                    </div>
                </div>
                <form method="post">
                    <div class="card-body">
                        <div class="row gy-4 mb-4">
                            <div class="col-xxl-6">
                                <label for="select-category" class="form-label">Kategori</label>
                                <select id="select-category" class="form-select" asp-for="UpdateBannerDto.CategoryID">
                                    @foreach (var item in ViewBag.CategoryList)
                                    {
                                        <option value="@item.Value" selected="@(ViewBag.SelectedCategory == item.Value)">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-xxl-6">
                                <label for="txt-product-image" class="form-label">Ürün Adı</label>
                                <input type="text" id="txt-product-image" class="form-control" value="@Model.GetBannerDto.ProductName" asp-for="UpdateBannerDto.ProductName" />
                            </div>
                            <div class="col-xxl-6">
                                <label for="txt-product-name" class="form-label">Ürün Resmi</label>
                                <input type="text" id="txt-product-name" class="form-control" value="@Model.GetBannerDto.ProductImage" asp-for="UpdateBannerDto.ProductImage" />
                            </div>
                            <div class="col-xxl-6">
                                <label for="txt-product-price" class="form-label">Ürün Fiyatı</label>
                                <input type="text" id="txt-product-price" class="form-control" value="@Model.GetBannerDto.ProductPrice" asp-for="UpdateBannerDto.ProductPrice" />
                            </div>
                        </div>
                    </div>
                    <input type="hidden" value="@Model.GetBannerDto.BannerID" asp-for="UpdateBannerDto.BannerID" />
                    <div class="card-footer text-end">
                        <button class="btn btn-primary" type="submit">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

