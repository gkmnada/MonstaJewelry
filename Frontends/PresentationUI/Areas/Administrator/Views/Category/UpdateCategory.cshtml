@model CategoryViewModel

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
        <h1 class="page-title fw-semibold fs-18 mb-0">Kategori Güncelle</h1>
        <div class="ms-md-1 ms-0">
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Kategoriler</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Kategori Güncelle</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div class="card custom-card">
                <div class="card-header justify-content-between">
                    <div class="card-title">
                        Kategori Güncelle
                    </div>
                    <div class="d-flex">
                    </div>
                </div>
                <form method="post">
                    <div class="card-body">
                        <div class="row gy-4 mb-4">
                            <div class="col-xxl-12">
                                <label for="txt-category-name" class="form-label">Kategori Adı</label>
                                <input type="text" id="txt-category-name" class="form-control" value="@Model.GetCategoryDto.CategoryName" asp-for="UpdateCategoryDto.CategoryName" />
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <button class="btn btn-primary" type="submit">Kaydet</button>
                    </div>
                    <input type="hidden" value="@Model.GetCategoryDto.CategoryID" asp-for="UpdateCategoryDto.CategoryID" />
                </form>
            </div>
        </div>
    </div>
</div>

